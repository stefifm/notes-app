<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center car-signin-css">
            <div class="card-header">
                <h1>Inicio de Sesion</h1>
            </div>
            <img src="/img/logo.png" alt="stefifm" class="rounded-circle mx-auto d-block m-4 logo">
            <div class="card-body car-body-signin-css">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" autofocus>

                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contrasena">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            Iniciar Sesion
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>