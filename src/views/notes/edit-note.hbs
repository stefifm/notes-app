<div class="col-md-4 mx-auto">
    <div class="card car-edit-css">
        <div class="card-header">
            <h3>Editar nota</h3>
        </div>
        <div class="card-body car-body-edit-css">
            <form action="/notes/edit-note/{{note.id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Titulo" value="{{note.title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{note.description}}</textarea>
                </div>
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar
                </button>
            </form>
        </div>
    </div>
</div>